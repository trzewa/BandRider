<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trzewa.bandrider" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".InviteActivity"
            android:label="@string/app_name"
            android:theme="@style/InviteActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".ChoiceActivity"
            android:label="@string/title_activity_choice" >
        </activity>
        <activity
            android:name=".AddInstrumentActivity"
            android:label="@string/title_activity_add_instrument" >
        </activity>
        <activity
            android:name=".AddActivity"
            android:label="@string/title_activity_add" >
        </activity>
        <activity
            android:name=".AddInstrumemtActivity"
            android:label="@string/title_activity_add_instrumemt" >
        </activity>
        <activity
            android:name=".AddStuffActivity"
            android:label="@string/title_activity_add_stuff" >
        </activity>
        <activity
            android:name=".SummaryInstrumentActivity"
            android:label="@string/title_activity_summary_instrument" >
        </activity>
        <activity
            android:name=".SummaryStuffActivity"
            android:label="@string/title_activity_summary_stuff" >
        </activity>
    </application>

</manifest>
